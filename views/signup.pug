extends base

block append head
    style.
        header, footer {
            display: none;
        }
        .main {
            min-height: 100vh;
        }

block content
    .d-flex.align-items-center(style="min-height: 100vh;")
        .login.rounded-corner.w-100.my-4
            .row
                .login-left.col-md-6.d-flex.justify-content-center.align-items-center
                    a(href="/")
                        img(src="/img/logo-white.svg", style="width: 200px;")
                .login-right.col-md-6
                    h4.mb-5 Sign up
                    form.form.form--signup
                        .mb-4
                            label.form-label(for="name") Name
                            input#name.form-control.form-control-lg(type="text", placeholder="Your Name")
                        .mb-4
                            label.form-label(for="email") Email address
                            input#email.form-control.form-control-lg(type="email", placeholder="you@example.com")
                        .mb-4
                            label.form-label(for="password") Password
                            input#password.form-control.form-control-lg(type="password", placeholder="•••••••••••••")
                        .mb-4
                            label.form-label(for="passwordConfirm") Confirm password
                            input#passwordConfirm.form-control.form-control-lg(type="password", placeholder="•••••••••••••")
                        .mb-0
                            button.btn.btn-primary.btn-lg.w-100.signup-btn(type="submit") SIGN UP